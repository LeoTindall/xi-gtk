{
	"app-id": "com.github.eyelash.xi-gtk",
	"runtime": "org.gnome.Platform",
	"runtime-version": "3.26",
	"sdk": "org.gnome.Sdk",
	"sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
	"command": "xi-gtk",
	"finish-args": [
		"--socket=x11",
		"--socket=wayland",
		"--filesystem=home"
	],
	"modules": [
		{
			"name": "xi-core",
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/google/xi-editor"
				}
			],
			"subdir": "rust",
			"buildsystem": "simple",
			"build-commands": [
				"source /usr/lib/sdk/rust-stable/enable.sh && cargo build --release",
				"install -D target/release/xi-core /app/bin/xi-core"
			],
			"build-options": {
				"build-args": ["--share=network"]
			}
		},
		{
			"name": "oniguruma",
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/kkos/oniguruma"
				}
			]
		},
		{
			"name": "xi-syntect-plugin",
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/google/xi-editor"
				}
			],
			"subdir": "rust/syntect-plugin",
			"buildsystem": "simple",
			"build-commands": [
				"source /usr/lib/sdk/rust-stable/enable.sh && cargo build --release",
				"install -D manifest.toml /app/share/xi-gtk/plugins/syntect/manifest.toml",
				"install -D target/release/xi-syntect-plugin /app/share/xi-gtk/plugins/syntect/bin/xi-syntect-plugin"
			],
			"build-options": {
				"build-args": ["--share=network"]
			}
		},
		{
			"name": "xi-gtk",
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/eyelash/xi-gtk"
				}
			],
			"buildsystem": "meson"
		}
	]
}
